<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".view.activity.myfragment.ResetActivity">
    <RelativeLayout
        android:layout_margin="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_26">

        <ImageView
            android:id="@+id/details_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/left_shape" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="重置密码"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22" />
    </RelativeLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:background="#1c2243"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_42">
    <TextView
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="#fff"
        android:text="我的密码"
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16" />
    <EditText
        android:id="@+id/edit_old_password"
        android:gravity="right"
        android:textColor="#fff"
        android:layout_marginRight="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:textColorHint="#b8b8b8"
        android:hint="请输入原密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:background="#1c2243"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:text="设置新密码"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16" />
        <EditText
            android:textColor="#fff"
            android:id="@+id/edit_new_password"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:textColorHint="#b8b8b8"
            android:hint="请输入新密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:background="#1c2243"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:text="确认新密码"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16" />
        <EditText
            android:id="@+id/edit_again_new_password"
            android:gravity="right"
            android:textColor="#fff"

            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:textColorHint="#b8b8b8"
            android:hint="请再次输入密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/but_affirm"
        android:layout_marginBottom="@dimen/dp_60"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14"
        android:background="#e8185e"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_36" />
</LinearLayout>