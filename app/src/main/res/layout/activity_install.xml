<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".view.activity.myfragment.InstallActivity">
    <RelativeLayout
        android:layout_margin="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_26">

        <ImageView
            android:id="@+id/details_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/left_shape" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22" />
    </RelativeLayout>
    <LinearLayout
        android:background="#1E1E41"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_88">
        
        <LinearLayout
            android:id="@+id/linear_clear"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:text="清除缓存"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_16" />
            <TextView
                android:id="@+id/text_cache"
                android:textColor="#fff"
                android:gravity="right"
                android:layout_weight="1"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/liner_updata"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="版本更新"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_16" />
            <ImageView
                android:background="@mipmap/right_shape"
                android:layout_width="@dimen/m7"
                android:layout_height="@dimen/m12" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_reset"
        android:background="#1E1E41"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_54">
        
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="重置密码"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_16" />
        <ImageView
            android:layout_marginRight="@dimen/dp_20"
            android:background="@mipmap/right_shape"
            android:layout_width="@dimen/m7"
            android:layout_height="@dimen/m12" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_exit"
        android:background="#1E1E41"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_54">
        
        <TextView
            android:text="退出登录"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_16" />
    </LinearLayout>
</LinearLayout>