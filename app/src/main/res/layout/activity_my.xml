<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".view.activity.myfragment.MyActivity">

    <RelativeLayout
        android:layout_margin="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_26">

        <ImageView
            android:id="@+id/details_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/left_shape" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="我的"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22" />
    </RelativeLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:background="#1c2243"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_178">

        <LinearLayout
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                android:text="头        像"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_16" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/text_my_imag"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                android:text="呢        称"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_16" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_my_name"
                android:textSize="@dimen/sp_12"
                android:textColor="#deaaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                android:text="性        别"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_16" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_my_xing"
                android:textSize="@dimen/sp_12"
                android:textColor="#deaaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                android:text="出生日期"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_16" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_my_data"
                android:textSize="@dimen/sp_12"
                android:textColor="#deaaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#1c2243"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:text="邮        箱"
            android:layout_width="@dimen/dp_57"
            android:layout_height="@dimen/dp_16" />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_my_email"
            android:textSize="@dimen/sp_12"
            android:textColor="#deaaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_14" />

    </LinearLayout>
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>