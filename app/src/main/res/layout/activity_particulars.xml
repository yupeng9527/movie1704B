<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".view.activity.ParticularsActivity">


    <RelativeLayout
        android:layout_margin="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_26">

        <ImageView
            android:id="@+id/details_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/left_shape" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="影院详情"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_22">

        <TextView
            android:layout_weight="1"
            android:id="@+id/text_name_name"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20" />
        <LinearLayout
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_20">
            <ImageView
                android:visibility="gone"
                android:id="@+id/details_btn"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_19"
                android:src="@drawable/falseemptyheart" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/details_btn_false"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_19"
                android:src="@drawable/emptyheart" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_22">

        <TextView
            android:layout_weight="1"
            android:id="@+id/text_label"
            android:textColor="#d3af56"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20" />

        <LinearLayout
            android:id="@+id/liner_address"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22">

            <ImageView
                android:background="@mipmap/group"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_16" />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="到这里去"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17" />
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_lay"
        app:tabTextColor="#fff"
        android:background="#1c2243"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_weight="1"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <Button
            android:id="@+id/but_pj"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#DDDA0F"
            android:text="影院评价"
            android:textSize="@dimen/sp_14" />
        <Button
            android:layout_weight="1"
            android:id="@+id/but_pq"
            android:text="查看该影院电影排期"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:background="#e8185e"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
    </LinearLayout>

</LinearLayout>