<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".view.activity.myfragment.RevieMovieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_margin="@dimen/dp_30"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dp_26">

            <ImageView
                android:id="@+id/details_back"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/left_shape" />
            <TextView
                android:layout_centerHorizontal="true"
                android:text="写评语"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_22" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="#1c2243"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38">

            <TextView
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_30"
                android:id="@+id/text_name"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#fff"
                android:id="@+id/text_pingf"
                android:text="我的评分  (5.5分)"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="@dimen/dp_106"
                android:layout_height="@dimen/dp_17" />
            <RatingBar
                android:progressBackgroundTint="#fff"
                android:progressTint="#e8185e"
                android:id="@+id/rating_bar"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="写点评价吧"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_17" />
            <EditText
                android:id="@+id/edit_txt"
                android:background="#1c2243"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_129" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="#1c2243"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38">

            <TextView
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_30"
                android:id="@+id/text_cinme_name"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/dp_30"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="写下你对影院的评论吧"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17" />
            <EditText
                android:id="@+id/edit_txt_cinme"
                android:background="#1c2243"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_129" />
        </LinearLayout>
        <Button
            android:id="@+id/but_tj"
            android:background="#e8185e"
            android:textSize="@dimen/sp_14"
            android:text="提交"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_margin="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>