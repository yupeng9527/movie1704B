<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".view.activity.PrincipalActivity">
    
    <com.bw.movie.view.zview.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></com.bw.movie.view.zview.CustomViewPager>
    <LinearLayout
        android:background="#141931"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/lay_one"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:visibility="gone"
                android:id="@+id/image_movei_dj"
                android:background="@mipmap/movie"
                android:layout_width="@dimen/m20"
                android:layout_height="@dimen/m20" />
            <LinearLayout
                android:id="@+id/lin_movei"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/bagselect"
                android:layout_width="@dimen/m108"
                android:layout_height="@dimen/m36">

                <ImageView
                    android:background="@mipmap/yingpian"
                    android:layout_width="@dimen/m20"
                    android:layout_height="@dimen/m20" />
                <TextView
                    android:layout_marginLeft="@dimen/m20"
                    android:textColor="#e8185e"
                    android:textSize="@dimen/m14"
                    android:text="电影"
                    android:layout_width="@dimen/m28"
                    android:layout_height="@dimen/m20" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_two"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView

                android:id="@+id/image_cinem_dj"
                android:background="@mipmap/cinema"
                android:layout_width="@dimen/m20"
                android:layout_height="@dimen/m20" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lin_cinem"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/bagselect"
                android:layout_width="@dimen/m108"
                android:layout_height="@dimen/m36">

                <ImageView
                    android:background="@mipmap/shape"
                    android:layout_width="@dimen/m20"
                    android:layout_height="@dimen/m20" />
                <TextView
                    android:layout_marginLeft="@dimen/m20"
                    android:textColor="#e8185e"
                    android:textSize="@dimen/m14"
                    android:text="影院"
                    android:layout_width="@dimen/m28"
                    android:layout_height="@dimen/m20" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_swe"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_myy_dj"
                android:background="@mipmap/myy"
                android:layout_width="@dimen/m20"
                android:layout_height="@dimen/m20" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lin_myy"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/bagselect"
                android:layout_width="@dimen/m108"
                android:layout_height="@dimen/m36">

                <ImageView
                    android:background="@mipmap/ymm"
                    android:layout_width="@dimen/m20"
                    android:layout_height="@dimen/m20" />
                <TextView
                    android:layout_marginLeft="@dimen/m20"
                    android:textColor="#e8185e"
                    android:textSize="@dimen/m14"
                    android:text="我的"
                    android:layout_width="@dimen/m28"
                    android:layout_height="@dimen/m20" />
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>