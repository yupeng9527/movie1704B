<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".view.activity.myfragment.VersionActivity">
    <RelativeLayout
        android:layout_margin="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_26">

        <ImageView
            android:id="@+id/details_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/left_shape" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="最新版本"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22" />
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="@dimen/dp_40"
        android:background="@mipmap/pio"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100" />
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#fff"
        android:text="最新版本"
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:textColor="#fff"
        android:text="V 2.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/but_version"
        android:layout_marginTop="@dimen/dp_30"
        android:background="#e8185e"
        android:textSize="@dimen/sp_14"
        android:textColor="#fff"
        android:text="立即更新"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/liner_pre"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ProgressBar
            android:background="#fff"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="100"
            style="?android:attr/progressBarStyleHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/downloadButton"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button

                android:id="@+id/cancel_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂停"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/continue_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="继续"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>