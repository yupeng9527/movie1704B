<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".view.activity.ShowActivity">
    <com.bw.movie.view.zview.SearchView
        android:layout_margin="@dimen/dp_20"
        android:id="@+id/sear_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.bw.movie.view.zview.SearchView>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recy_layout_ss"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/linear_layout_ss"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            app:tabTextColor="#fff"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:id="@+id/tab_lay"
            android:background="#1E1E41"
            android:layout_width="match_parent"
            android:layout_height="60dp">

        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/view_page"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>