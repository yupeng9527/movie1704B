<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:background="#1E1E41"
    android:gravity="center_vertical"
    android:layout_height="160dp">
    <ImageView
        android:id="@+id/imag_soon"
        android:layout_margin="10dp"
        android:layout_width="110dp"
        android:layout_height="130dp" />
    <LinearLayout
        android:layout_toRightOf="@id/imag_soon"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_weight="1"
            android:id="@+id/text_moviename"
            android:textColor="#fff"
            android:text="导演:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/text_sooktime"
            android:textColor="#fff"
            android:text="主演:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/text_num"
                android:textColor="#fff"
                android:text="评分:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bit_yuyue"
                android:text="预约"
                android:textSize="20dp"
                android:textColor="#fff"
                android:background="#E62C67"
                android:layout_width="80dp"
                android:layout_height="30dp" />
            <Button
                android:visibility="gone"
                android:id="@+id/bit_yiyuyue"
                android:text="已预约"
                android:textSize="20dp"
                android:textColor="#fff"
                android:background="#EEE154"
                android:layout_width="80dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
