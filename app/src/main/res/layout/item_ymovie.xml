<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/m110"
    android:background="#141931"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        app:placeholderImage="@mipmap/ic_launcher"
        android:id="@+id/imag_view"
        android:layout_margin="10dp"
        android:layout_width="110dp"
        android:layout_height="130dp" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/imag_view"
        android:id="@+id/text_score"
        android:textColor="#fff"
        android:text="评分:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@id/imag_view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_name"
            android:textSize="14sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="拍摄能力差"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m20" />

        <Button
                android:contextClickable="true"
                android:id="@+id/bit_gaopiao"
                android:text="购票"
                android:textSize="12dp"
                android:textColor="#fff"
                android:background="#E62C67"
                android:layout_width="40dp"
                android:layout_height="17dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
